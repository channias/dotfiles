# Load some applications to specific workspace
assign [class="Google-chrome|Vivaldi-stable|Opera|Firefox"] $ws1
assign [class="terminator"] $ws2
assign [class="Code"] $ws3
assign [class="slack|skypeforlinux|Skype Preview"] $ws5
assign [class="Spotify"] $ws8
for_window [class="Spotify"] move to workspace $ws8
for_window [class="Pcmanfm|Nautilus|Thunar|Toplevel"] floating enable

floating_minimum_size 75 x 50
floating_maximum_size -1 x -1
new_window pixel 0
mouse_warping none

###############################
#           MISC              #
###############################
# Startup applications
exec --no-startup-id compton
exec --no-startup-id slack
exec --no-startup-id spotify
exec --no-startup-id terminator
exec --no-startup-id dunst
# Disable capslock
exec --no-startup-id setxkbmap -option caps:none
# Enable polybar
exec_always --no-startup-id "killall polybar; ~/.config/polybar/polybar.sh"
# Configure TouchPad
exec --no-startup-id xinput set-prop "SynPS/2 Synaptics TouchPad" "libinput Tapping Enabled" 1
exec --no-startup-id xinput set-prop "SynPS/2 Synaptics TouchPad" "libinput Natural Scrolling Enabled" 1
# Autolock session
exec --no-startup-id xautolock -time 10 -locker '~/.local/bin/locksession'
# Set desktop background
exec_always --no-startup-id feh --bg-fill ~/.cache/i3lock/lock-image.png
